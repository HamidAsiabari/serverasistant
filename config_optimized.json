{
  "server_name": "production-server-01-optimized",
  "environment": "production",
  "log_level": "WARNING",
  "platform": "auto",
  "services": [
    {
      "name": "web-app",
      "type": "docker-compose",
      "enabled": true,
      "path": "./docker_services/web-app",
      "compose_file": "docker-compose.yml",
      "services": ["web-app"],
      "ports": ["8080:8080"],
      "environment": {
        "NODE_ENV": "production",
        "DB_HOST": "mysql",
        "DB_PORT": "3306",
        "DB_NAME": "myapp",
        "DB_USER": "myapp_user",
        "DB_PASSWORD": "myapp_password"
      },
      "volumes": [
        "./logs:/app/logs"
      ],
      "restart_policy": "unless-stopped",
      "health_check": {
        "url": "http://localhost:8080/health",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "nginx",
      "type": "docker-compose",
      "enabled": true,
      "path": "./docker_services/nginx",
      "compose_file": "docker-compose.yml",
      "services": ["nginx"],
      "ports": ["80:80", "443:443"],
      "volumes": [
        "./nginx.conf:/etc/nginx/nginx.conf:ro",
        "./conf.d:/etc/nginx/conf.d:ro",
        "./ssl:/etc/nginx/ssl:ro",
        "./logs:/var/log/nginx"
      ],
      "restart_policy": "unless-stopped",
      "health_check": {
        "url": "http://app.soject.com/health",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "mysql-database",
      "type": "docker-compose",
      "enabled": true,
      "path": "./docker_services/mysql",
      "compose_file": "docker-compose.yml",
      "services": ["mysql"],
      "restart_policy": "unless-stopped",
      "health_check": {
        "command": "mysqladmin ping -h localhost -u root -p${MYSQL_ROOT_PASSWORD}",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "postgres-redis",
      "type": "docker-compose",
      "enabled": false,
      "path": "./docker_services/database",
      "compose_file": "docker-compose.yml",
      "services": ["postgres", "redis"],
      "restart_policy": "unless-stopped",
      "health_check": {
        "command": "pg_isready -U postgres",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "portainer",
      "type": "docker-compose",
      "enabled": false,
      "path": "./docker_services/portainer",
      "compose_file": "docker-compose.yml",
      "services": ["portainer"],
      "restart_policy": "unless-stopped",
      "health_check": {
        "url": "http://localhost:9000/api/status",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "mail-server",
      "type": "docker-compose",
      "enabled": false,
      "path": "./docker_services/mail-server",
      "compose_file": "docker-compose.yml",
      "services": ["postfix", "dovecot", "spamassassin", "roundcube"],
      "restart_policy": "unless-stopped",
      "health_check": {
        "command": "telnet localhost 25",
        "interval": 300,
        "timeout": 10,
        "retries": 2
      }
    },
    {
      "name": "gitlab",
      "type": "docker-compose",
      "enabled": false,
      "path": "./docker_services/gitlab",
      "compose_file": "docker-compose.yml",
      "services": ["gitlab"],
      "restart_policy": "unless-stopped",
      "health_check": {
        "url": "http://localhost:8081/help",
        "interval": 600,
        "timeout": 30,
        "retries": 2
      }
    },
    {
      "name": "monitoring",
      "type": "docker-compose",
      "enabled": false,
      "path": "./docker_services/monitoring",
      "compose_file": "docker-compose.yml",
      "services": ["prometheus", "grafana"],
      "restart_policy": "unless-stopped"
    }
  ],
  "global_settings": {
    "docker_socket": "auto",
    "docker_host": "auto",
    "log_retention_days": 7,
    "backup_enabled": false,
    "backup_schedule": "0 2 * * *",
    "platform_specific": {
      "linux": {
        "docker_socket": "/var/run/docker.sock",
        "docker_host": "unix:///var/run/docker.sock",
        "log_path": "./logs",
        "compose_command": "docker-compose",
        "file_permissions": "755"
      },
      "windows": {
        "docker_socket": "npipe:////./pipe/docker_engine",
        "docker_host": "npipe:////./pipe/docker_engine",
        "log_path": ".\\logs",
        "compose_command": "docker-compose.exe",
        "file_permissions": "644"
      }
    },
    "notification": {
      "email": "admin@example.com",
      "webhook": "https://hooks.slack.com/services/xxx/yyy/zzz"
    }
  }
} 